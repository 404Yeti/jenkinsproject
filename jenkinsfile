pipeline {
    agent {
        node {
            label 'docker-agent-alpine'
        }
    }
    triggers {
        pollSCM('H/10 * * * *') // Polls SCM every 10 minutes
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                    echo "doing build stuff.."
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                    echo "doing test stuff.."
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo "Delivering.."
                sh '''
                    echo "doing delivery stuff.."
                '''
            }
        }
    }
}
